<h1><%= link_to 'Groups', root_path %> > <%= @group.name %></h1>

<p>
  <strong>Memberships (<%= @group.memberships.count %>)</strong>
  <ul>
    <%- @group.memberships.each do |membership| %>
      <li><%= membership.name %>: <%= link_to 'w/ Bullet', group_membership_path(@group, membership) %> : <%= link_to 'w/o Bullet', group_membership_path(@group, membership, skip_bullet: true) %> </li>
    <%- end %>
  </ul>
</p>

<p>
  <strong>Contacts (<%= @group.group_contacts.count %>)</strong>
  <ul>
    <%- @group.group_contacts.each do |contact| %>
      <li><%= contact.value %> (from <%= contact.person_name %>)</li>
    <%- end %>
  </ul>
</p>
